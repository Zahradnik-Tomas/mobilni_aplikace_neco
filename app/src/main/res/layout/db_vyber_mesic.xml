<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <NumberPicker
        android:id="@+id/vybrany_rok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp" />

    <NumberPicker
        android:id="@+id/vybrany_mesic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/vybrany_rok"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/vyber_mesic_ok_button"
        style="@style/Widget.Material3.Button.TextButton.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vybrany_mesic"
        android:layout_alignEnd="@id/vybrany_mesic"
        android:text="OK" />


</RelativeLayout>